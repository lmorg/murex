autocomplete set terraform {
    [
        {
            "Dynamic": ({
                terraform -> @[Common commands:..]se -> !regexp 'm/^(All other commands:|)$' -> [ :0 ]
            }),
            "FlagValues": {
                "state": [{
                    "Dynamic": ({ terraform: state -> @[Subcommands:...]se -> [ :0 ] })
                }],
                "workspace": [{
                    "Flags": [ "delete", "list", "new", "select", "show" ]
                }]
            }
        }
    ]
}

