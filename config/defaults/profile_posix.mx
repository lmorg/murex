config eval shell safe-commands {
    -> alter --merge / ([
        "cat", "ps", "grep", "egrep", "ls", "head", "tail", "printf", "awk", "sed", "td", "cut"
    ])
}

if { which bash } then {
    function bash {
        config: set proc force-tty true
        
        if { $ARGS -> len -> = -1 } then {
            exec bash @{ $ARGS -> @[1..] }
        
        } else {
            exec bash
        }
    }
}